{
  "version": "0.1.0",
  "name": "advanced_game_contract",
  "instructions": [
    {
      "name": "initializeAdmin",
      "accounts": [
        { "name": "adminAccount", "isMut": true, "isSigner": false },
        { "name": "admin", "isMut": true, "isSigner": true },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": []
    },
    {
      "name": "initializeGame",
      "accounts": [
        { "name": "adminAccount", "isMut": true, "isSigner": false },
        { "name": "playersAccount", "isMut": true, "isSigner": false },
        { "name": "game", "isMut": true, "isSigner": false },
        { "name": "admin", "isMut": true, "isSigner": true },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [{ "name": "feeAccount", "type": "publicKey" }]
    },
    {
      "name": "joinGame",
      "accounts": [
        { "name": "game", "isMut": true, "isSigner": false },
        { "name": "playersAccount", "isMut": true, "isSigner": false },
        { "name": "playerPda", "isMut": true, "isSigner": false },
        { "name": "player", "isMut": true, "isSigner": true },
        { "name": "feeAccount", "isMut": true, "isSigner": false },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": []
    },
    {
      "name": "makeGuess",
      "accounts": [
        { "name": "game", "isMut": true, "isSigner": false },
        { "name": "playerPda", "isMut": true, "isSigner": false },
        { "name": "player", "isMut": true, "isSigner": true }
      ],
      "args": [{ "name": "playerGuess", "type": { "defined": "Guess" } }]
    },
    {
      "name": "claimReward",
      "accounts": [
        { "name": "game", "isMut": true, "isSigner": false },
        { "name": "playerPda", "isMut": true, "isSigner": false },
        { "name": "player", "isMut": true, "isSigner": true }
      ],
      "args": []
    },
    {
      "name": "deactivatePlayer",
      "accounts": [
        { "name": "game", "isMut": true, "isSigner": false },
        { "name": "playerPda", "isMut": true, "isSigner": false }
      ],
      "args": []
    },
    {
      "name": "finishGame",
      "accounts": [
        { "name": "game", "isMut": true, "isSigner": false },
        { "name": "playersAccount", "isMut": false, "isSigner": false }
      ],
      "args": []
    },
    { "name": "closeGame", "accounts": [{ "name": "game", "isMut": true, "isSigner": false }], "args": [] }
  ],
  "accounts": [
    {
      "name": "Game",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "admin", "type": "publicKey" },
          { "name": "totalPool", "type": "u64" },
          { "name": "active", "type": "bool" },
          { "name": "seqNo", "type": "u64" },
          { "name": "winner", "type": { "option": "publicKey" } },
          { "name": "winnerCandidate", "type": { "option": "publicKey" } },
          { "name": "highScore", "type": "i64" },
          { "name": "startTime", "type": "i64" },
          { "name": "feeAccount", "type": "publicKey" },
          { "name": "playerCount", "type": "u64" },
          { "name": "eliminatedCount", "type": "u64" }
        ]
      }
    },
    {
      "name": "AdminAccount",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "admin", "type": "publicKey" },
          { "name": "gameCount", "type": "u64" }
        ]
      }
    },
    { "name": "PlayersAccount", "type": { "kind": "struct", "fields": [{ "name": "players", "type": { "vec": "publicKey" } }] } },
    {
      "name": "PlayerPda",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "key", "type": "publicKey" },
          { "name": "score", "type": "u64" },
          { "name": "currentNumber", "type": "u8" },
          { "name": "isActive", "type": "bool" },
          { "name": "lastGuessTime", "type": "i64" },
          { "name": "guessHistory", "type": { "vec": { "defined": "GuessRecord" } } }
        ]
      }
    }
  ],
  "types": [
    {
      "name": "GuessRecord",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "guess", "type": { "defined": "Guess" } },
          { "name": "previousNumber", "type": "u8" },
          { "name": "newNumber", "type": "u8" },
          { "name": "correct", "type": "bool" },
          { "name": "timestamp", "type": "i64" }
        ]
      }
    },
    { "name": "Guess", "type": { "kind": "enum", "variants": [{ "name": "High" }, { "name": "Low" }, { "name": "Same" }] } }
  ],
  "errors": [
    { "code": 6000, "name": "NotWinner", "msg": "You are not the winner." },
    { "code": 6001, "name": "NoWinnerYet", "msg": "There is no winner yet." },
    { "code": 6002, "name": "PlayerNotActive", "msg": "The player is not active." },
    { "code": 6003, "name": "JoinPeriodEnded", "msg": "Join period has ended." },
    { "code": 6004, "name": "GuessTimeExceeded", "msg": "Guess time exceeded 30 seconds, player should be inactive." },
    { "code": 6005, "name": "PlayerAlreadyInactive", "msg": "Player is already inactive." },
    { "code": 6006, "name": "NotExceededTime", "msg": "Time not exceeded 30 seconds yet." },
    { "code": 6007, "name": "AlreadyJoined", "msg": "Player already joined the game." },
    { "code": 6008, "name": "GameNotEnded", "msg": "Game is not ended." },
    { "code": 6009, "name": "SomePlayersStillActive", "msg": "Some players are still active." },
    { "code": 6010, "name": "ExistPlayer", "msg": "This game includes players." },
    { "code": 6011, "name": "GuessPeriodNotStarted", "msg": "The guess period has not started yet." }
  ]
}
